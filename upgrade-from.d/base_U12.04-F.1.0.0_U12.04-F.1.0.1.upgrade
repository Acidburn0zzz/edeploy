#!/bin/bash

ROLE="$1"
FROM="$2"
TO="$3"
TDIR="$4"

export DEBIAN_FRONTEND=noninteractive

set -x

cat > ${TDIR}/etc/apt/sources.list.d/updates.list <<EOF
deb http://archive.ubuntu.com/ubuntu/ precise-security main 
deb http://archive.ubuntu.com/ubuntu/ precise-updates main 
EOF

chroot ${TDIR} apt-get update
chroot ${TDIR} apt-get dist-upgrade -y
chroot ${TDIR} apt-get clean
