src="$1"
dir="$2"
version="$3"
ROLE=openstack-common

ORIG=$(cd $(dirname $0); pwd)

. ${ORIG}/functions

if [ -z "$OS_VERS" ]; then
    echo "OS_VERS is not set, Havana will be built by default"
    OS_VERS=havana
fi

install_ib_if_needed $ORIG $dir

OS=$(chroot ${dir} lsb_release -i -s)
RELEASE=$(chroot ${dir} lsb_release -c -s)
CODENAME=$(chroot ${dir} lsb_release -r -s)

prepare_packages () {

if [ $OS == "Debian" ]; then
  chroot ${dir} wget http://apt.puppetlabs.com/puppetlabs-release-$RELEASE.deb
  chroot ${dir} dpkg -i puppetlabs-release-$RELEASE.deb
  chroot ${dir} rm puppetlabs-release-$RELEASE.deb
  chroot ${dir} apt-key adv --recv-keys --keyserver keyserver.ubuntu.com E52660B15D964F0B
  cat > ${dir}/etc/apt/sources.list.d/$RELEASE-backport.list <<EOF
deb http://ftp.debian.org/debian ${RELEASE}-backports main
EOF
  cat > ${dir}/etc/apt/sources.list.d/openstack-$RELEASE-$OS-VERS.list <<EOF
deb http://cloud.pkgs.enovance.com/${RELEASE}-${OS_VERS}/ ${OS_VERS} main
EOF

elif [ $OS == "Ubuntu" ]; then
  chroot ${dir} wget http://apt.puppetlabs.com/puppetlabs-release-$RELEASE.deb
  chroot ${dir} dpkg -i puppetlabs-release-$RELEASE.deb
  chroot ${dir} rm puppetlabs-release-$RELEASE.deb
  chroot ${dir} apt-key adv --recv-keys --keyserver keyserver.ubuntu.com E52660B15D964F0B
  cat > ${dir}/etc/apt/sources.list.d/openstack.list <<EOF
deb http://cloud.pkgs.enovance.com/${RELEASE}-${OS_VERS}/ ${OS_VERS} main
EOF
  cat > ${dir}/etc/apt/sources.list <<EOF
deb http://archive.ubuntu.com/ubuntu ${RELEASE} main
deb-src http://archive.ubuntu.com/ubuntu ${RELEASE} main
deb http://archive.ubuntu.com/ubuntu ${RELEASE}-updates main
deb-src http://archive.ubuntu.com/ubuntu ${RELEASE}-updates main
deb http://archive.ubuntu.com/ubuntu ${RELEASE} universe
deb-src http://archive.ubuntu.com/ubuntu ${RELEASE} universe
deb http://archive.ubuntu.com/ubuntu ${RELEASE}-updates universe
deb-src http://archive.ubuntu.com/ubuntu ${RELEASE}-updates universe
deb http://security.ubuntu.com/ubuntu ${RELEASE}-security main
deb-src http://security.ubuntu.com/ubuntu ${RELEASE}-security main
deb http://security.ubuntu.com/ubuntu ${RELEASE}-security universe
deb-src http://security.ubuntu.com/ubuntu ${RELEASE}-security universe
EOF

elif [ $OS == "CentOS" ] && [ $CODENAME == "6.4" ]; then
  chroot ${dir} rpm -ivh http://yum.puppetlabs.com/el/6/products/i386/puppetlabs-release-6-7.noarch.rpm
  chroot ${dir} yum install -y puppet
  chroot ${dir} yum remove puppetlabs-release-6-7.noarch
  chroot ${dir} yum install -y http://dl.fedoraproject.org/pub/epel/6/x86_64/epel-release-6-8.noarch.rpm
  chroot ${dir} yum install -y http://rdo.fedorapeople.org/openstack-${OS_VERS}/rdo-release-${OS_VERS}.rpm

else
  echo "OS or Release not supported"
  exit 1
fi

}

configure_cloudinit () {
mkdir -p ${dir}/etc/cloud/cloud.cfg.d
rm -f ${dir}/etc/cloud/cloud.cfg

if [ $OS == "Debian" ]; then
  chroot ${dir} apt-get install -y -t $RELEASE-backports cloud-init

elif [ $OS == "Ubuntu" ]; then
  # Todo(EmilienM): Move cloud-init into backports repo to have last release properly
  chroot ${dir} wget http://security.ubuntu.com/ubuntu/pool/main/c/cloud-init/cloud-init_0.7.3-0ubuntu2_all.deb
  chroot ${dir} wget http://security.ubuntu.com/ubuntu/pool/main/p/python-json-patch/python-json-patch_1.0-2_all.deb
  chroot ${dir} wget http://security.ubuntu.com/ubuntu/pool/main/p/python-json-pointer/python-json-pointer_1.0-1ubuntu2_all.deb
  chroot ${dir} dpkg -i cloud-init_0.7.3-0ubuntu2_all.deb  || true
  chroot ${dir} dpkg -i python-json-patch_1.0-2_all.deb  || true
  chroot ${dir} dpkg -i python-json-pointer_1.0-1ubuntu2_all.deb  || true
  chroot ${dir} apt-get -f install -y -o Dpkg::Options::="--force-confold"
  chroot ${dir} rm cloud-init_0.7.3-0ubuntu2_all.deb python-json-patch_1.0-2_all.deb python-json-pointer_1.0-1ubuntu2_all.deb

elif [ $OS == "CentOS" ] && [ $CODENAME == "6.4" ]; then
  chroot ${dir} yum install -y cloud-init

else
  echo "OS or Release not supported"
  exit 1
fi

cat > ${dir}/etc/cloud/cloud.cfg.d/90_dpkg.cfg << EOF
datasource_list: [ NoCloud ]
EOF

cat > ${dir}/etc/cloud/cloud.cfg <<EOF
user: root
disable_root: 0
preserve_hostname: False

cloud_init_modules:
 - bootcmd
 - resizefs
 - set_hostname
 - update_hostname
 - update_etc_hosts
 - ca-certs
 - rsyslog
 - ssh
 - users-groups

cloud_config_modules:
 - mounts
 - ssh-import-id
 - locale
 - set-passwords
 - grub-dpkg
 - apt-pipelining
 - apt-update-upgrade
 - landscape
 - timezone
 - puppet
 - chef
 - salt-minion
 - mcollective
 - disable-ec2-metadata
 - runcmd
 - byobu

cloud_final_modules:
 - rightscale_userdata
 - scripts-per-once
 - scripts-per-boot
 - scripts-per-instance
 - scripts-user
 - keys-to-console
 - phone-home
 - final-message
EOF
}

install_packages () {
if [ $OS == "Debian" ] || [ $OS == "Ubuntu" ]; then
  chroot ${dir} apt-get update
  chroot ${dir} apt-get install -y --force-yes puppet augeas-tools openssh-server wget iptables build-essential
  chroot ${dir} sed -e 's/START=yes/START=no/' -i /etc/default/puppet
  chroot ${dir} rm -rf /var/lib/puppet/ssl/*

elif [ $OS == "CentOS" ] && [ $CODENAME == "6.4" ]; then
  chroot ${dir} yum install -y augeas openssh-server wget

else
  echo "OS or Release not supported"
  exit 1
fi
}

prepare_packages
install_packages
configure_cloudinit

echo -e "\nVersion ${version}\n" > ${dir}/etc/motd
echo -e "VERS=${version}\nROLE=${ROLE}\n" > ${dir}/var/lib/edeploy/conf
