#!/bin/bash

src="$1"
dir="$2"
version="$3"

ROLE=backup

ORIG=$(cd $(dirname $0); pwd)

. ${ORIG}/functions
. ${ORIG}/common

do_chroot ${dir} apt-get update
do_chroot ${dir} apt-get install -y --force-yes wget openssh-server vlan bridge-utils vim
do_chroot ${dir} apt-get clean

echo -e "\nVersion ${version}\n" > ${dir}/etc/motd
echo -e "VERS=${version}\nROLE=${ROLE}\n" > ${dir}/var/lib/edeploy/conf
